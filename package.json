{
  "name": "urbex",
  "version": "1.0.0",
  "description": "A lightweight HTTP client with built in cache support and more",
  "main": "index.ts",
  "types": "index.d.ts",
  "scripts": {
    "test": "npm run test:mocha && npm run test:karma",
    "test:mocha": "mocha --require ts-node/register --recursive test/**/*.test.ts",
    "test:karma": "karma start karma.config.ts --single-run",
    "lint:check": "eslint lib --ignore-path .gitignore --ext .ts",
    "lint:fix": "eslint lib --ignore-path .gitignore --ext .ts --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "build": "tsc",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:dry-run": "standard-version --dry-run",
    "publish:tag": "git push origin --follow-tags",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orison-networks/urbex.git"
  },
  "bugs": {
    "url": "https://github.com/orison-networks/urbex/issues"
  },
  "homepage": "https://github.com/orison-networks/urbex#readme",
  "keywords": [
    "HTTP",
    "caching",
    "network",
    "nodejs",
    "javascript"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/chai": "^4.3.3",
    "@types/karma": "^6.3.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "chai": "^4.3.6",
    "husky": "^8.0.0",
    "karma": "^6.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^5.1.0",
    "karma-mocha": "^2.0.1",
    "karma-typescript": "^5.5.3",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.4.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0"
  },
  "standard-version": {
    "scripts": {
      "posttag": "npm run publish:tag"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "author": "Orison Networks",
  "license": "MIT"
}
