{
    "compilerOptions": {
        "lib": ["ES2015", "DOM", "ES2015.Iterable", "DOM.Iterable"],
        "module": "CommonJS",
        "target": "ES2015",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "dist",
    },
    "include": ["./lib"],
    "exclude": ["**/*.test.ts", "node_modules"],
    "ts-node": {
        "esm": true
    }
}
